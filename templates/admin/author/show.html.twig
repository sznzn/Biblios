{% extends 'base.html.twig' %}

{% block title %}La détail de l'auteur{% endblock %}

{% block body %}
    <section class="container px-4">
        {% if author is defined and author is not null %}
            <h1>Auteur {{ author.name }}</h1>
            <div class="card mb-3 m-auto">
                <div class="card-body">
                    <div class="card-title d-flex justify-content-between align-items-center">
                        <h2 class="card-title">{{ author.name }}</h2>
                        <small class="text-muted">Identifiant: {{ author.id }}</small>
                    </div>
                    <div class="card-text d-flex justify-content-between align-items-center">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Date de naissance: {{ author.dateOfBirth ? author.dateOfBirth|date('d/m/Y') }}</li>
                            <li class="list-group-item">Date de décès: {{ author.dateOfDeath ? author.dateOfDeath|date('d/m/Y') : ' --- ' }}</li>
                        </ul>
                            <p><small>Nationalité: {{ author.nationality|country_name }}</small></p>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-end align-items-center">
                    <a href="{{ path('app_admin_author')}}" class="btn btn-primary d-block w-25 m-3">Retour à la liste des auteurs</a>
                    <a href="{{ path('app_admin_author_edit', {'id': author.id}) }}" class="btn btn-warning d-block w-25 m-3">Modifier</a>
                </div>
            </div>
        {% else %}
            <h1>Auteur non trouvé</h1>
        {% endif %}
    </section>
{% endblock %}
