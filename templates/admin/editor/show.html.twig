{% extends 'base.html.twig' %}

{% block title %}La détail de l'éditeur{% endblock %}

{% block body %}
    <section class="container px-4">
        {% if editor is defined and editor is not null %}
            <h1>Editeur {{ editor.name }}</h1>
            <div class="card mb-3 m-auto">
                <div class="card-body">
                    <div class="card-title d-flex justify-content-between align-items-center">
                        <h2 class="card-title">{{ editor.name }}</h2>
                        <small class="text-muted">Identifiant: {{ editor.id }}</small>
                    </div>
                </div>
                    
                <div class="card-footer d-flex justify-content-end align-items-center">
                    <a href="{{ path('app_admin_editor')}}" class="btn btn-primary d-block w-25 m-3">Retour à la liste des éditeurs</a>
                    <a href="{{ path('app_admin_editor_edit', {'id': editor.id}) }}" class="btn btn-warning d-block w-25 m-3">Modifier</a>
                </div>
            </div>
        {% else %}
            <h1>Editeur non trouvé</h1>
        {% endif %}
    </section>
{% endblock %}
