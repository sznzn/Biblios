{% extends 'base.html.twig' %}

{% block title %}Liste des éditeurs{% endblock %}

{% block body %}
<section class="container px-4">
    <h1>Liste des éditeurs</h1>

    <ul class="list-group list-group-flush">
        {% for editor in editors %}
            <div class="card mb-1">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_admin_editor_show', {'id': editor.id}) }}">
                        <h4 class="card-title">{{ editor.name }}</h4>
                    </a>
                    <small class="text-muted">Identifiant: {{ editor.id }}</small>
                </div>
            </div>
            {% else %}
                <p>Aucun éditeur trouvé</p>
        {% endfor %}
    </ul>
    {{ pagerfanta(editors) }}
    <a href="{{ path('app_admin_editor_new') }}" class="btn btn-primary">Ajouter un éditeur</a>
</section>
{% endblock %}

